{
  "name": "frontend-scaffold",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:micro": "vite --config vite.config.micro.ts",
    "build": "vite build",
    "build:micro": "vite build --config vite.config.micro.ts",
    "build:analyze": "ANALYZE=true vite build",
    "build:prod": "NODE_ENV=production vite build",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 999",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:ci": "eslint . --ext ts,tsx --format=json --output-file=lint-report.json",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "commitlint": "commitlint --edit",
    "commitlint:check": "commitlint --from HEAD~1 --to HEAD --verbose",
    "docs:generate": "node docs/scripts/generate-docs.cjs",
    "docs:update": "npm run docs:generate && git add docs/",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "NODE_ENV=production ./scripts/deploy.sh",
    "release": "./scripts/github-release.sh",
    "github:status": "./scripts/check-github-status.sh",
    "docker:build": "docker build -t frontend-scaffold .",
    "docker:run": "docker run -p 3000:3000 frontend-scaffold",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --json > security-report.json",
    "bundle:analyze": "npm run build:analyze && npx vite-bundle-analyzer dist",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "performance:test": "node scripts/performance-test.js",
    "health:check": "node scripts/health-check.js",
    "monitoring:start": "node scripts/monitoring-server.js",
    "backup:create": "node scripts/backup.js",
    "backup:restore": "node scripts/restore.js"
  },
  "dependencies": {
    "@sentry/react": "^7.118.0",
    "@sentry/tracing": "^7.118.0",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "helmet-csp": "^2.0.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "prom-client": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^6.8.1",
    "redis": "^4.6.10",
    "web-vitals": "^4.2.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@playwright/test": "^1.46.0",
    "@storybook/addon-a11y": "^7.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/addon-onboarding": "^1.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-security": "^2.1.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^9.2.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "js-yaml": "^4.1.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^13.2.3",
    "msw": "^2.2.14",
    "nodemon": "^3.0.2",
    "ora": "^7.0.1",
    "pm2": "^5.3.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^7.0.0",
    "tailwindcss": "^3.2.7",
    "terser": "^5.43.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.1.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.20.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
